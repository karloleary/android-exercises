<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorButtonNormal">#FF9800</item>
        <item name="colorPrimaryDark">#cccccc</item>
        <item name="colorAccent">#666666</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="header">
        <item name="android:textColor">#ff8800</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="buttons">
        <item name="android:background">#ff8800</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Quiz -->

    <style name="quiz_header">
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="quiz_question">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="quiz_results">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">#ccc</item>
    </style>

    <style name="quiz_button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#ff8800</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
